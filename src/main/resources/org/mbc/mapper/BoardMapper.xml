<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 마이바티스 기본코드 -->

<mapper namespace="org.mbc.mapper.BoardMapper">	<!-- 인터페이스명 -->

	<!-- CDATA : 쿼리문의 특수문자가 연산자로 인식되지 않고 문자로 인식할 수 있도록 한다. -->
	<select id="getList2" resultType="org.mbc.domain.BoardVO">
	<!-- id : 메서드 명 -->
	<!-- resultType : BoardVO 객체 -->
		<![CDATA[
			select * from tbl_board where bno > 0
		]]>
	</select>

	<insert id="insert">	<!-- 생성된 객체에 값이 넘어오면 insert 쿼리문이 실행된다. -->
		<![CDATA[
			insert into tbl_board (bno, title, content, writer)
			values (seq_board.nextval, #{title}, #{content}, #{writer})
		]]>
	</insert>
	
	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE" resultType="long">
				select seq_board.nextval from dual
		</selectKey>	<!-- insertSelectKey 메서드가 실행되면 사전에 시퀀스 키를 갖고 와 long 값으로 갖고 있어라. 즉, 사전에 자동번호를 먼저 갖고 와 그 값을 bno에 넣는 것. -->
		
		<![CDATA[
			insert into tbl_board (bno, title, content, writer)
			values (#{bno}, #{title}, #{content}, #{writer})
		]]>
	</insert>	<!-- 위에서 갖고 온 bno를 insert 한다. -->
	
	<select id="read" resultType="org.mbc.domain.BoardVO">
		<![CDATA[
			select * from tbl_board where bno = #{bno}
		]]>
	</select>	<!-- bno가 넘어오면 찾아서 객체로 넘겨준다. -->

	<delete id="delete">
		<![CDATA[
			delete from tbl_board where bno = #{bno}
		]]>
	</delete>
	
	<update id="update">
		<![CDATA[
			update 
				tbl_board
			set 
				title = #{title},
				content = #{content},
				writer = #{writer},
				updateDate = sysdate
			where
				bno = #{bno}
		]]>
	</update>

</mapper>